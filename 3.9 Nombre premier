/* Exercice 3.9
Nombre premier */

boolean bePrime = true;

void setup () {
  int n = 4;
  isPrime(n);
}

void isPrime (int n) {
  for (int i = n-1; i > 1; i--) {
    if (n%i == 0) {
      bePrime = false;
    }
  }
  if (bePrime) {
    println (n + " est un nombre premier");
  }
    else {
    println (n + " n'est pas un nombre premier");
  }
}
