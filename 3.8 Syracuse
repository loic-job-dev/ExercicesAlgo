/* Exercice 3.8
Suite de Syracuse */

void setup () {
  int n = 14;
  suiteSyracuseWhile(n);
  println(" ");
  suiteSyracuseFor(n);
}


void suiteSyracuseWhile(int n) {
  println("Suite de Suracuse du nombre " + n + " :");
  while (n!=1) {
    if (n%2 == 0) {
      n = n/2;
    }
    else {
      n=n*3+1;
    }
    println(n);
  }
}


void suiteSyracuseFor(int n) {
  for(int i=0; i!=1; i=n) {
        if (n%2 == 0) {
      n = n/2;
    }
    else {
      n=n*3+1;
    }
    println(n);
  }
}
